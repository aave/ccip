name: Build

on: push

# workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    env:
      FOUNDRY_PROFILE: 'ccip'
    # strategy:
    #   matrix:
    #     node-version:
    #       - 16.x

    steps:
      - name: Checkout
        uses: actions/checkout@v3
        with:
          submodules: recursive
      - name: Setup NodeJS
        uses: ./.github/actions/setup-nodejs
        with:
          prod: "true"
      - name: Install Foundry
        uses: foundry-rs/foundry-toolchain@v1
        with:
          version: nightly
      - name: Install Dependencies
        run: |
          cd contracts
          npm i
          forge i
      - name: Compilation
        run: 'forge b'
      - name: Lint check
        run: 'npm run prettier:check'
      - name: Test
        run: 'npm run test'
